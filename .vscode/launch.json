  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rails Server",
      "type": "Ruby",
      "request": "launch",
      "preLaunchTask": "webpack-dev-server",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/bin/rails",
      "showDebuggerOutput": true,
      "useBundler": true,
      "args": [
        "server"
      ]
    },
    {
      "name": "Rails Tests",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceFolder}/bin/rails",
      "args": [
        "test"
      ]
    },
  ]
}
